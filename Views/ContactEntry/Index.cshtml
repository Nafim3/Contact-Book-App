@model List<ContactEntry> 

<div  class="container">

    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="ContactEntry" asp-action="Create">
                Create new contact entry
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Contact Entries</h2>
        </div>
    </div>

</div>

<div class ="table-responsive">
      <table class="table table-striped table-hover">
          <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Actions</th>
              </tr>
          </thead>

          <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.FirstName</td>
                    <td>@entry.LastName</td>
                    <td>@entry.PhoneNumber</td>
                    <td>@entry.Email</td>
                   
                    <td>
                        <a asp-controller="ContactEntry" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-sm ">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                            </svg>

                            Edit
                        </a>

                        <a asp-controller="ContactEntry" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm ">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash2" viewBox="0 0 16 16">
                                <path d="M14 3a.7.7 0 0 1-.037.225l-1.684 10.104A2 2 0 0 1 10.305 15H5.694a2 2 0 0 1-1.973-1.671L2.037 3.225A.7.7 0 0 1 2 3c0-1.105 2.686-2 6-2s6 .895 6 2M3.215 4.207l1.493 8.957a1 1 0 0 0 .986.836h4.612a1 1 0 0 0 .986-.836l1.493-8.957C11.69 4.689 9.954 5 8 5s-3.69-.311-4.785-.793" />
                            </svg>

                            Delete
                        </a>

                    </td>
                        
                </tr> 
            }
          </tbody>
      </table>
</div>