@model List<ContactEntry> 

<div  class="container">

    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="ContactEntry" asp-action="Create">
                Create new contact entry
            </a>
            
        </div>
        <div class="col-6" text-end>
            <h2>Contact Entries</h2>
        </div>
    </div>

</div>

<div class ="table-responsive">
      <table class="table table-striped table-hover">
          <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Actions</th>
              </tr>
          </thead>

          <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.FirstName</td>
                    <td>@entry.LastName</td>
                    <td>@entry.PhoneNumber</td>
                    <td>@entry.Email</td>
                    <td> Edit and Delete!</td>
                        @* <a class="btn btn-primary" asp-action="Edit" asp-route-id="@entry.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@entry.Id">Delete</a>
                    
                    </td> *@
                </tr> 
            }
          </tbody>
      </table>
</div>