@model ContactEntry


<div class="container mt-4">
    <div class="row">
        <div class=" col-md-8 offset-1-md-2">
            <div class="card">
                <div class="card-header" bg-primary text-white>
                    <h2>Edit an Entry</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name here" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your surname here" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number here" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email here" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Generated" class="form-label">Date</label>
                            <input asp-for="Generated" class="form-control" type="date" />
                            <span asp-validation-for="Generated" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                Edit
                            </button>
                            <a asp-controller="ContactEntry" asp-action="Index" class="btn btn-danger">
                                Cancel
                            </a>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}
